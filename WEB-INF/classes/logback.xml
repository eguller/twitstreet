<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <logger name="com.twitstreet" level="DEBUG"/>
   
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %5level %c - %m%n</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="stdout"/>
  </root>
</configuration>
